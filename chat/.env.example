# =============================================================================
# Strava Chat â€” Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.

# --- LLM Provider ---
# Anthropic API key (required)
ANTHROPIC_API_KEY=sk-ant-api03-...

# --- Authentication ---
# Secret for signing JWT tokens (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
CHAT_JWT_SECRET=change-me-to-a-random-string

# Bcrypt hash of the login password (generate with: node -e "require('bcryptjs').hash('yourpassword', 10).then(console.log)")
CHAT_PASSWORD_HASH=$2a$10$...

# --- Database Paths ---
# Path to reporting DuckDB (read-only access)
DUCKDB_REPORTING_PATH=../infra/airflow/data/strava_reporting.duckdb

# Path to chat history SQLite database (created automatically)
CHAT_DB_PATH=./data/chat.sqlite

# --- Server ---
CHAT_API_PORT=3001
LOG_LEVEL=debug

# --- Observability (optional) ---
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
