{
  "name": "strava-chat",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "packages/shared",
    "packages/mcp-server",
    "packages/chat-api",
    "packages/chat-ui"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build -w packages/shared",
    "build:mcp-server": "npm run build -w packages/mcp-server",
    "build:chat-api": "npm run build -w packages/chat-api",
    "build:chat-ui": "npm run build -w packages/chat-ui",
    "dev:api": "npm run dev -w packages/chat-api",
    "dev:ui": "npm run dev -w packages/chat-ui",
    "lint": "eslint packages/*/src --ext .ts,.tsx,.svelte",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx,.svelte --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,svelte,json,css}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,svelte,json,css}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "typescript-eslint": "^8.56.0"
  }
}
