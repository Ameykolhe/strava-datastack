# Airflow User ID (50000 for macOS/Windows, $(id -u) for Linux)
AIRFLOW_UID=50000

# Fernet key for Airflow encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here

# Airflow web UI credentials
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# Airflow PostgreSQL Database
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow
AIRFLOW_POSTGRES_DB=airflow

# OpenLineage Configuration
OPENLINEAGE_NAMESPACE=strava-datastack

# Sentry Configuration (optional)
AIRFLOW__SENTRY__SENTRY_ON=false
# SENTRY_DSN=https://your-sentry-dsn
